<!-- Modal -->
<div class="modal fade bs-modal-sm evaluation-modal" id="myModal" tabindex="-1" role="dialog"
     aria-labelledby="mySmallModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-md">
    <div class="modal-content">
      <br>

      <div class="bs-example bs-example-tabs">
        <ul id="myTab" class="nav nav-tabs">
          <li class="active"><a href="#standards" data-toggle="tab">All</a></li>
          <% @departments.each do |department| %>
              <% if Question.where(department: department.name).count > 0 %>
                  <li class=""><a href="#<%= department.name %>" data-toggle="tab"><%= department.name.capitalize %></a>
                  </li>
              <% end %>
          <% end %>
        </ul>
      </div>


      <div class="modal-body">
        <div id="myTabContent" class="tab-content">

          <% @departments.each do |department| %>
              <% if Question.where(department: department.name).count > 0 %>
                  <% department_questions = [] %>
                  <% @all_questions.each do |question| %>
                      <% if question.department == department.name %>
                        <% department_questions.push(question) %>
                      <% end %>
                  <% end %>


                  <div class="tab-pane fade" id=<%= department.name %>>
                    <fieldset>
                      <table class="table table-striped">
                        <thead>
                        <tr>
                          <th class="col-xs-8">Question</th>
                          <th class="col-xs-4">Pass</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% department_questions.each do |question| %>
                            <tr>
                              <div class="user-row" data-question-id="<%= question.id %>">
                                <th>
                                  <strong><%= question.body %></strong>
                                </th>
                                <th>
                                  <strong><input class="questionCheckbox" type="checkbox" data-question-id=<%= question.id %>></strong>
                                </th>
                              </div>
                            </tr>
                        <% end %>
                        </tbody>
                      </table>
                    </fieldset>
                  </div>


              <% end %>
          <% end %>




          <div class="tab-pane fade active in" id="standards">
            <fieldset>
              <table class="table table-striped">
                <thead>
                <tr>
                  <th class="col-xs-8">Question</th>
                  <!--<th class="col-xs-2">class</th>-->
                  <!--<th class="col-xs-2">sub class</th>-->
                  <th class="col-xs-4">Pass</th>
                </tr>
                </thead>
                <tbody>
                <% @all_questions.each do |question| %>
                    <tr>
                      <div class="user-row" data-question-id="<%= question.id %>">
                        <th>
                          <strong><%= question.body %></strong>
                        </th>
                        <th>
                          <strong>
                            <div class="switch">
                              <!--<input type="radio" class="switch-input" name="view" value="week" id="week" checked>-->
                              <!--<label for="week" class="switch-label switch-label-off">Week</label>-->
                              <input type="radio" class="switch-input questionCheckbox" name="view" value="2" id="month" data-question-id=<%= question.id %>>
                              <label for="month" class="switch-label switch-label-month">Pass</label>
                              <input type="radio" class="switch-input questionCheckbox" name="view" value="1" id="year" data-question-id=<%= question.id %>>
                              <label for="year" class="switch-label switch-label-year">na</label>
                              <input type="radio" class="switch-input questionCheckbox" name="view" value="0" id="decade" data-question-id=<%= question.id %>>
                              <label for="decade" class="switch-label switch-label-decade">Fail</label>
                              <span class="switch-selection"></span>
                            </div>
                            <!--<input class="questionCheckbox questionCheckboxAll" type="checkbox" data-question-id=<%= question.id %>>-->
                          </strong>
                        </th>
                      </div>
                    </tr>
                <% end %>
                </tbody>
              </table>
            </fieldset>
          </div>
        </div>
      </div>
      <div class="modal-footer" style="border: 0">
        <center>
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </center>
      </div>
    </div>
  </div>
</div>