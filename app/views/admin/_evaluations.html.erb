<!-- Modal -->
<div class="modal fade bs-modal-sm questions-modal" id="myModal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
<div class="modal-dialog modal-md">
<div class="modal-content">
<br>

<div class="bs-example bs-example-tabs">
  <ul id="myTab" class="nav nav-tabs">
    <li class="active"><a href="#signin" data-toggle="tab">All questions</a></li>
    <li class=""><a href="#signup" data-toggle="tab">Bar</a></li>
    <li class=""><a href="#why" data-toggle="tab">Service</a></li>
  </ul>
</div>
<div class="modal-body">
<div id="myTabContent" class="tab-content">


<div class="tab-pane fade active in" id="signin">
  <%= form_for :question, as: :post, url: questions_new_path(:question), html: {class: 'newQuestionForm'} do |f| %>

      <div class="col-xs-12 control-group">

        <div class="controls col-xs-2">
          <%= f.submit "Add +", :class => "btn btn-primary login" %>
        </div>

        <div class="col-xs-10 controls">
          <%= f.text_field :body, :class => "form-control", :placeholder => "New question" %>
        </div>
      </div>
  <% end %>
  <br>
  <br>
  <br>
  <!--<br>-->

  <% @all_questions.each do |user| %>

      <div class="user-row col-xs-12">
        <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 dropdown-user question-dropdown align-center" data-for=".<%= user.id %>">
          <i class="glyphicon glyphicon-chevron-down text-muted"></i>
        </div>
        <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10">
          <strong><%= user.body %></strong>
        </div>

      </div>

      <div class="row user-infos <%= user.id %>">
        <div class="col-xs-12 col-sm-12 col-md-10 col-lg-10 col-xs-offset-0 col-sm-offset-0 col-md-offset-1 col-lg-offset-1">
          <div class="panel panel-primary">
            <div class="panel-heading">
              <h3 class="panel-title">Question information</h3>
            </div>
            <div class="panel-body">
              <div class="row">

                <div class="col-xs-10 col-sm-10 hidden-md hidden-lg">
                  <strong><%= user.body %></strong><br>
                  <dl>
                    <dt>Warnings</dt>
                    <dd>0</dd>
                  </dl>
                </div>
                <div class=" col-md-11 col-lg-11 hidden-xs hidden-sm">
                  <table class="table question-table table-user-information">
                    <tbody>

                    <tr>
                      <td>Warnings</td>
                      <td>0</td>
                    </tr>
                    <tr>
                      <td>
                        <%= form_for :user, as: :post, url: login_path(:user), html: {class: 'loginForm'} do |f| %>
                            <fieldset>
                              <div class="control-group col-xs-10">
                                <div class="controls">
                                  <%= f.text_field :email, :class => "form-control", :placeholder => "Change Question" %>
                                </div>
                              </div>

                              <div class="control-group col-xs-2">
                                <div class="controls">
                                  <%= f.submit "Update", :class => "btn btn-primary login" %>
                                </div>
                              </div>
                            </fieldset>
                        <% end %>
                      </td>
                    </tr>

                    </tbody>
                  </table>
                </div>
              </div>
            </div>
            <div class="panel-footer">
              <button class="btn btn-sm btn-primary" type="button"
                      data-toggle="tooltip"
                      data-original-title="Send message to user"><i class="glyphicon glyphicon-envelope"></i></button>
                                <span class="pull-right">
                                    <button class="btn btn-sm btn-warning" type="button"
                                            data-toggle="tooltip"
                                            data-original-title="Edit this question">
                                      <i class="glyphicon glyphicon-edit"></i>
                                    </button>
                                    <button class="btn btn-sm btn-danger" type="button"
                                            data-toggle="tooltip"
                                            data-original-title="Remove this question">
                                      <i class="glyphicon glyphicon-remove"></i>
                                    </button>
                                </span>
            </div>
          </div>
        </div>
      </div>

  <% end %>


</div>

