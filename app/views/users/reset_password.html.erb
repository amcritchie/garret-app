<div class="main-content">
  <div class="container">
    <%= form_for "reset_password" do |f| %>
        <fieldset>
          <div class="controls col-xs-12">
            <h1>Please type in your new password.</h1>
            <br>
          </div>

          <div class="control-group margin-top-8">
            <div class="controls col-xs-12">
              <%= f.password_field :password, :class => "form-control", :placeholder => "password123" %>
            </div>
          </div>


          <div class="control-group col-xs-12 margin-top-8">
            <label class="control-label" for="signup"></label>

            <div class="controls">
              <%= f.submit "Save new password", :class => "btn btn-primary width-100-percent margin-bottom-20" %>
            </div>
          </div>
        </fieldset>
    <% end %>
  </div>
</div>