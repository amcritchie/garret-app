<%= render 'modals/user_evaluation' %>


<br>
<div class="container">
  <h4>Open Evaluations</h4>

  <table class="table table-bordered align-center">
    <thead>
    <tr>
      <th class="col-xs-2" data-field="id">Restaurant</th>
      <th class="col-xs-1" data-field="id">Evaluation</th>
      <th class="col-xs-1" data-field="name">Phone</th>
      <th class="col-xs-1" data-field="price">Site</th>
      <th class="col-xs-5" data-field="price">Address</th>
    </tr>
    </thead>
    <tbody>
    <% @open_evaluations.each do |application| %>
        <tr>
          <th>
            <%= application.evaluation.restaurant.name.split.map(&:capitalize)*' ' %>
          </th>
          <th>
            <button href="#login" class="btn btn-success startEvaluation" data-application-id="<%= application.id %>" data-toggle="modal" data-target=".evaluation-modal">Evaluation</button>
          </th>
          <th>
            <%= application.evaluation.restaurant.phone_number %>
          </th>
          <th>
            <%= link_to 'website', '/' %>
          </th>
          <th>
            <%= render 'helper/address_format', locals: {entity: application.evaluation.restaurant} %>
          </th>
        </tr>
    <% end %>
    </tbody>
  </table>


  <br>

  <h4>New evaluations</h4>


  <table class="table table-bordered align-center">
    <thead>
    <tr>
      <th class="col-xs-2" data-field="id">Restaurant</th>
      <th class="col-xs-1" data-field="id">Evaluation</th>
      <th class="col-xs-1" data-field="price">Site</th>
      <th class="col-xs-6" data-field="price">Address</th>
    </tr>
    </thead>
    <tbody>
    <% @new_evaluations.each do |evaluation| %>
        <% open_application = EvaluationApplication.where(user_id: current_user.id, evaluation_id: evaluation.id) %>
        <% if open_application.exists? %>
            <% if open_application[0].status == 'pending' %>
                <tr>
                  <th>
                    <%= evaluation.restaurant.name.split.map(&:capitalize)*' ' %>
                  </th>
                  <th>
                    <button class="btn btn-danger pendingEvaluation" data-evaluation-id="<%= evaluation.id %>">Already
                      applied
                    </button>
                  </th>
                  <th>
                    <%= link_to 'website', '/' %>
                  </th>
                  <th>
                    <%= render 'helper/address_format', locals: {entity: evaluation.restaurant} %>
                  </th>
                </tr>
            <% end %>
        <% else %>
            <tr>
              <th>
                <%= evaluation.restaurant.name.split.map(&:capitalize)*' ' %>
              </th>
              <th>
                <button class="btn btn-success applyToEvaluation" data-evaluation-id="<%= evaluation.id %>">Apply</button>
              </th>
              <th>
                <%= link_to 'website', '/' %>
              </th>
              <th>
                <%= render 'helper/address_format', locals: {entity: evaluation.restaurant} %>
              </th>
            </tr>
        <% end %>
    <% end %>
    </tbody>
  </table>

  <br>
  <br>

</div>
