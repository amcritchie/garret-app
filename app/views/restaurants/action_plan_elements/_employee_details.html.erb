<div class="col-xs-2">
  <h5><%= locals[:title] %></h5>
  <% if @application["#{locals[:code]}_valid"] %>
      <% if  @application["#{locals[:code]}_gender"] == 'male' %>
          <i class="fa fa-male"></i>
      <% else %>
          <i class="fa fa-female"></i>
      <% end %>
      - <%= @application["#{locals[:code]}_height"] %>,
      <%= @application["#{locals[:code]}_other"] %>
  <% else %>
      N/A
  <% end %>
</div>